;;(depends-on "helm"(use-package helm-swoop)(global-set-key (kbd "M-i") 'helm-swoop)(global-set-key (kbd "M-I") 'helm-swoop-back-to-last-point)(define-key isearch-mode-map (kbd "M-i") 'helm-swoop-from-isearch);; Use Emacs terminfo, not system terminfo(setq system-uses-terminfo nil)(use-package yasnippet)(yas-global-mode 1);;스타트업 화면 감추기(setq inhibit-splash-screen t)(setq inhibit-startup-message t);;(load-file "~/.emacs.d/common/font.el")(global-set-key [?\S- ] 'toggle-input-method)(setq default-input-method "korean-hangul");;common;;콘솔 모드 일 경우 상단 바 보이지 않기(unless window-system (menu-bar-mode -1) )(setq make-backup-files nil) ;;백업 파일 미생성(setq auto-save-default nil) ;;자동 저장 방지(setq backup-directory-alist '(("" . "~/.emacs.d/emacs-backup")));; 이맥스 리로드 함수(defun reload-dotemacs ()  "Reload .emacs"  (interactive)  (load-file "~/.emacs.d/init.el"));;auto complete;;(add-to-list 'ac-dictionary-directories "~/.emacs.d/auto-complete-dict");;(ac-config-default);;현재 커서가 위치한 함수의 이름을 미니버퍼에 표시(which-function-mode);;오류 하단에 표시(prelude-ensure-module-deps '(flymake-cursor));;helm anything(global-set-key (kbd "M-t") 'helm-for-files)(use-package helm-projectile)(global-set-key (kbd "C-x p") 'helm-projectile);;GIT 사용시 왼쪽 라인에 추가/삭제 라인 표시(use-package git-gutter)(global-git-gutter-mode t);;windows 이동 설정(global-set-key [M-left] 'windmove-left)          ; move to left windnow(global-set-key [M-right] 'windmove-right)        ; move to right window(global-set-key [M-up] 'windmove-up)              ; move to upper window(global-set-key [M-down] 'windmove-down)(global-set-key (kbd "C-x <up>") 'windmove-up)(global-set-key (kbd "C-x <down>") 'windmove-down)(global-set-key (kbd "C-x <right>") 'windmove-right)(global-set-key (kbd "C-x <left>") 'windmove-left)(use-package window-numbering)(window-numbering-mode 1)(use-package magit)(setq magit-commit-signoff t)(use-package multiple-cursors)(global-set-key (kbd "C-S-c C-S-c") 'mc/edit-lines)(global-set-key (kbd "C->") 'mc/mark-next-like-this)(global-set-key (kbd "C-<") 'mc/mark-previous-like-this)(global-set-key (kbd "C-c C-<") 'mc/mark-all-like-this)(use-package smex)(smex-initialize)(global-set-key (kbd "M-x") 'smex)(global-set-key (kbd "M-X") 'smex-major-mode-commands)(global-set-key (kbd "C-c f") 'helm-recentf)